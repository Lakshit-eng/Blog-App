<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("./partials/head")%>
  <title>Blog Page</title>
</head>
 <body>
   <%- include("./partials/nav")%>

    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" width="700px">
        <pre class="mt-3"><%= blog.body %></pre>
    </div>
    <div class="container mt-4">
      <img src="<%= blog.createdBy.profileImageUrl %>" width="50px" alt=""> <%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-3">
     <h2>Comments (<%= comments.length %>) </h2>
      <% if (locals.user) { %>
       
          <form action="/blog/comment/<%= blog._id %>" method="POST">
              <div class="mb-3">
            
                <input type="text" class="form-control" name="content" placeholder="Enter your comment">
                <button type="submit" class="btn btn-sm btn-primary mt-3">Comment</button>
                
              </div>
         </form>
    
      <% } %>

    </div>

    
    <div class="container mt-3">
      <% comments.forEach(comment => { %>
       <div>
        <img src="<%= comment.createdBy.profileImageUrl %>" width="50px" alt=""> <%= comment.createdBy.fullName %>
        <pre> <%= comment.content %> </pre>
       </div>


      <% }) %>
    </div>
   <%- include("./partials/scripts")%>   
</body>

</html> 